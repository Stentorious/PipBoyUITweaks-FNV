int	iMenuID

begin Function {iMenuID}

	Goo1.AuxVarErase "*PipTweaks_InvRef"

	; Cache equipped item stats and update color
	Call (CompileScript "PipBoyUITweaks\GetItemStats.gek")

	; Update DT/DR
	Call (CompileScript "PipBoyUITweaks\UpdateDTDR.gek")

	; Update weight color
	SetUIFloatAlt "HUDMainMenu\_PlrStat+Encumbrance" (IsPCOverencumbered)

	; Reset alpha pulse
	SetUIFloatGradual "InventoryMenu\_PipTweaks+Pulse" -204 0 1.5 2
	SetUIFloatGradual "StatsMenu\_PipTweaks+Pulse" -255

end