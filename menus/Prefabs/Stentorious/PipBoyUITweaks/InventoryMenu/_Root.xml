<!-- Colorful Condition Meters -->
<_PipTweaks+TypeCND> <copy src="ConditionInfo" trait="user6" /> </_PipTweaks+TypeCND>
<_PipTweaks+CND_1>
	<copy> -0.25 </copy>
	<onlyif src="io()" trait="_PipTweaks+TypeCND" />
	<add> 0.5 </add>
</_PipTweaks+CND_1>
<_PipTweaks+CND_2>
	<copy src="io()" trait="_PipTweaks+CND_1" />
	<div> 3 </div>
</_PipTweaks+CND_2>

<!-- Shift Unequippable Items -->
<_PipTweaks+EqOffset_0> -28 </_PipTweaks+EqOffset_0> <!-- Vanilla -->
<_PipTweaks+EqOffset_1> -18 </_PipTweaks+EqOffset_1> <!-- DarNUI -->
<_PipTweaks+EqOffset_2> -28 </_PipTweaks+EqOffset_2> <!-- VUI+ -->
<_PipTweaks+EqOffset_3> -28 </_PipTweaks+EqOffset_3> <!-- VUI+ Revelations -->
<_PipTweaks+EqOffset_4> -20 </_PipTweaks+EqOffset_4> <!-- VUIE -->
<_PipTweaks+EqOffset>
	<copy src="sibling(HUDMainmenu)" trait="_PipTweaks+UIMod" />
	<copy src="me()" trait="_PipTweaks+EqOffset_" />
</_PipTweaks+EqOffset>

<!-- Conditions -->
<_PipTweaks+CND_Headline>
	<copy src="io()" trait="_PipTweaks+SeparateDRDT" />
	<add> 1 </add>
	<onlyif>
		<not src="io()" trait="_PipTweaks+HardcoreInfo" />
		<or>
			<copy src="IM_Tabline" trait="_CurrentTab" />
			<neq> 2 </neq>
		</or>
	</onlyif>
</_PipTweaks+CND_Headline>
